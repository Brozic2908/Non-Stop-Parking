<odoo>
    <data>
        <record id='group_nsp_users' model='res.groups'>
            <field name="name">User</field>
            <field name="category_id" ref="non_stop_parking.module_category_nsp"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user')), (4, ref('base.group_partner_manager'))]"/>
        </record>

        <record id='group_nsp_manager' model='res.groups'>
            <field name='name'>Manager</field>
            <field name='category_id' ref='non_stop_parking.module_category_nsp'/>
            <field name="implied_ids" eval="[(4, ref('base.group_user')), (4, ref('base.group_partner_manager'))]"/>
        </record>

        <record id="group_nsp_admin" model="res.groups">
            <field name="name">Admin</field>
            <field name="category_id" ref="non_stop_parking.module_category_nsp"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user')), (4, ref('base.group_partner_manager'))]"/>
        </record>

        <record id="base.menu_apps" model="ir.ui.menu">
            <field name="groups_id" eval="[(4, ref('base.group_system'))]"/> <!-- Only system/admin users -->
        </record>

        <record id="mail.menu_root_discuss" model="ir.ui.menu">
            <field name="groups_id" eval="[(4, ref('base.group_system')), (3, ref('base.group_user'))]"/>
        </record>

        <record id="website.menu_website_configuration" model="ir.ui.menu">
            <field name="groups_id" eval="[(4, ref('base.group_system')), (3, ref('base.group_user'))]"/>
        </record>

        <record id="account.menu_finance" model="ir.ui.menu">
            <field name="groups_id" eval="[(4, ref('base.group_system')), (3, ref('base.group_user'))]"/>
        </record>

        <record id="spreadsheet_dashboard.spreadsheet_dashboard_menu_root" model="ir.ui.menu">
            <field name="groups_id" eval="[(4, ref('base.group_system')), (3, ref('base.group_user'))]"/>
        </record>
    </data>
</odoo>