<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="nsp_funds_package_form_view" model="ir.ui.view">
        <field name="name">nsp.fund.package.form</field>
        <field name="model">nsp.fund.package</field>
        <field name="arch" type="xml">
            <form string="Tạo gói tiền">
                <sheet>
                    <div class="oe_title">
                        <label for="price"/>
                        <h1>
                            <field name="currency_id" invisible="1"/>
                            <field name="price" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="nsp_funds_package_kanban_view" model="ir.ui.view">
        <field name="name">nsp.funds.package.kanban</field>
        <field name="model">nsp.fund.package</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" create="0" delete="0" edit="0">
                <templates>
                    <t t-name="kanban-box">
                        <div class="o_kanban_card" style="padding: 30px; text-align: center; border: 1px solid #ccc; border-radius: 10px;">
                            <button type="object" name="action_select_package" style="all: unset; cursor: pointer;">
                                <strong style="font-size: 32px;">
                                    <field name="currency_id" invisible="1"/>
                                    <field name="price" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                </strong>
                            </button>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="nsp_funds_package_kanban_edit_view" model="ir.ui.view">
        <field name="name">nsp.funds.package.kanban</field>
        <field name="model">nsp.fund.package</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_card" style="padding: 30px; text-align: center; border: 1px solid #ccc; border-radius: 10px;">
                            <strong style="font-size: 32px;">
                                <field name="currency_id" invisible="1"/>
                                <field name="price" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            </strong>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_nsp_fund_package_kanban" model="ir.actions.act_window">
        <field name="name">Chọn gói nạp tiền</field>
        <field name="res_model">nsp.fund.package</field>
        <field name="view_mode">kanban</field>
        <field name="view_id" ref="nsp_funds_package_kanban_view"></field>
        <field name="target">new</field>
    </record>

    <record id="action_manager_funds_pack_menu" model="ir.actions.act_window">
        <field name="name">Quản lý gói nạp tiền</field>
        <field name="res_model">nsp.fund.package</field>
        <field name="view_mode">kanban,form</field>
        <field name="view_id" ref="nsp_funds_package_kanban_edit_view"></field>
    </record>
</odoo>