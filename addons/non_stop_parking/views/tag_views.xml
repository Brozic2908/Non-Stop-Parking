<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List views -->
    <record id="nsp_tag_view_list" model="ir.ui.view">
        <field name="name">nsp.tag.view.list</field>
        <field name="model">nsp.tag</field>
        <field name="arch" type="xml">
            <list string="RFID Tags List" create="1" edit="1" delete="1">
                <field name="tag_id"></field>
                <field name="status"></field>
                <field name="valid_from"></field>
                <field name="valid_to"></field>
                <field name="create_date"></field>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="nsp_tag_view_form" model="ir.ui.view">
        <field name="name">nsp.tag.view.form</field>
        <field name="model">nsp.tag</field>
        <field name="arch" type="xml">
            <form string="RFID Tag Form">
                <sheet>
                    <group>
                        <group>
                            <field name="tag_id"/>
                            <field name="status"/>
                            <field name="create_date" string="Ngày tạo"/>
                        </group>
                        <group>
                            <field name="valid_from"></field>
                            <field name="valid_to"></field>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="nsp_tag_view_search" model="ir.ui.view">
        <field name="name">nsp.tag.view.search</field>
        <field name="model">nsp.tag</field>
        <field name="arch" type="xml">
            <search string="thẻ">
                <field name="tag_id"></field>
                <field name="create_date"></field>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="nsp_tag_action" model="ir.actions.act_window">
        <field name="name">Danh sách thẻ</field>
        <field name="res_model">nsp.tag</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="nsp_tag_view_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo thẻ đầu tiên của bạn
            </p>
        </field>
        <field name='groups_id' eval="[(4, ref('non_stop_parking.group_nsp_admin')), (4, ref('non_stop_parking.group_nsp_manager'))]"/>
    </record>
</odoo>
