<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="nsp_bill_list" model="ir.ui.view">
        <field name="name">nsp.bill.list</field>
        <field name="model">nsp.bill</field>
        <field name="arch" type="xml">
            <list string="Danh sách hóa đơn" create="0" delete="0" multi_edit="1" open_form_view="1">
                <field name="user_name"></field>
                <field name="tag_code"></field>
                <field name="vehicle_name"></field>
                <field name="parking_time"></field>
                <field name="total_price"></field>
            </list>
        </field>
    </record>

    <record id="nsp_bill_form" model="ir.ui.view">
        <field name="name">nsp.bill.form</field>
        <field name="model">nsp.bill</field>
        <field name="arch" type="xml">
            <form string="Hóa đơn" create="0" delete="0">
                <sheet>
                    <group>
                        <group>
                            <field name="user_name"/>
                            <field name="vehicle_name"/>
                            <field name="tag_code"/>
                            <field name="parking_time"/>
                            <field name="vehicle_type"/>
                            <field name="overnight_price"/>
                            <field name="total_price"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_fee_calc_menu" model="ir.actions.act_window">
        <field name="name">Quản lý hóa đơn</field>
        <field name="res_model">nsp.bill</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="nsp_bill_list"/>
        <field name="groups_id" eval="[(4, ref('non_stop_parking.group_nsp_admin'))]"></field>
    </record>
</odoo>