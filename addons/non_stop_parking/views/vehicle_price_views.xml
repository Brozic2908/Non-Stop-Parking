<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="vehicle_price_list" model="ir.ui.view">
        <field name="name">nsp.vehicle.price.list</field>
        <field name="model">nsp.vehicle.price</field>
        <field name="arch" type="xml">
            <list string="Danh sách giá xe" create="1" delete="1" multi_edit="1" open_form_view="1">
                <field name="vehicle_type"></field>
                <field name="day_time"></field>
                <field name="night_time"></field>
            </list>
        </field>
    </record>

    <record id="vehicle_price_form" model="ir.ui.view">
        <field name="name">nsp.vehicle.price.form</field>
        <field name="model">nsp.vehicle.price</field>
        <field name="arch" type="xml">
            <form string="Giá theo loại xe">
                <sheet>
                    <group>
                        <group>
                            <field name="currency_id" invisible="1"/>
                            <field name="vehicle_type"/>
                        </group>
                        <group>
                            <field name="day_time"/>
                            <field name="night_time"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_vehicle_price" model="ir.actions.act_window">
        <field name="name">Quản lý giá xe</field>
        <field name="res_model">nsp.vehicle.price</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="vehicle_price_list"></field>
    </record>
</odoo>